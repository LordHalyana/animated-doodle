<%- include('../partials/head') %>

<body>
    <%- include('../partials/navbar') %>

    <div class="header">
        <h2>User's Comment</h2>
    </div>

    <div class="content">
        
        <h1> User:  <%= comment.username %> </h1>

        <p> Comment: <%= comment.comment %> </p>
        
        <p> id: <%= comment.id %> </p>

        <a href="/comments" class="btn btn-outline-warning"> back to comments</a>
        <a href="/comments/<%= comment.id %>/edit" class="btn btn-outline-info"> edit comment</a>
        <form method="POST" action="/comments/<%= comment.id %>?_method=DELETE">
            <button class="btn btn-outline-danger">Delete</button>
        </form>
    </div>

    <%- include('../partials/footer') %>

</body>
</html>