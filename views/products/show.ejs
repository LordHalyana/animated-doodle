<%- include('../partials/head') %>

<body>
    <%- include('../partials/navbar') %>

    <div class="header">
        <h2>Product: <%= product.name %>  </h2>
    </div>

    <div class="content">

        <ul>
            <li>Price: <b><%= product.price %></b> </li>
            <li>Category: <b> <a href="/products?category=<%= product.category %>"><%= product.category %></a> </b></li>
        </ul>

        <a href="/products/<%= product.id %>/edit" class="btn btn-outline-warning"> Edit Product</a>
        <a href="/products" class="btn btn-outline-success"> Products Page</a>

        <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger">Delete</button>
         </form>
    </div>

    <%- include('../partials/footer') %>

</body>
</html>